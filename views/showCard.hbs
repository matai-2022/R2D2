{{> lineUpNav}}

<section class="section-wrapper">
  <h2>Events: <span>{{day}}</span></h2>
  <a class="button" href="/events/add/{{day}}">Add Event</a>

  <ul class="grid-columns">
    {{#each events}}
    <li class="grid-inner">
      <i class="fa-solid fa-otter"></i>
      <h3 class="title">{{eventName}}</h3>
      <div class="time-location">
        <p><strong>Location:</strong> <span class="data">{{locationName}}</span></p>
        <p><strong>Time:</strong> <span class="data">{{time}}</span></p>
      </div>
      <p>{{description}}</p>
      <a class="button" href="/events/{{id}}/edit">Edit Event</a>
    </li>
    {{/each}}
  </ul>
</section>